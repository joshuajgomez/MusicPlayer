<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Customise">
        <SwitchPreference
            android:defaultValue="true"
            android:key="PREF_DARK_THEME"
            android:summaryOff="Light theme"
            android:summaryOn="Dark theme"
            android:title="Enable dark theme" />

    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
            android:key="version_name"
            android:summary="v1.0.0.0"
            android:title="Build version" />
    </PreferenceCategory>
</PreferenceScreen>